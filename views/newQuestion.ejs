<%-include("partials/header")%>
    <h1>Ask a Question</h1>
    <div class="questionBox">
        <form action="/questions" method="POST">
            <div class="form-group">
                <label for="Title">Title</label>
                <div>
                    <input class="form-control" type="text" name="q[title]" id="Title" required="true" minlength="15" maxlength="60" placeholder="Give a brief summary of your question">
                </div>
            </div>
            <div class="form-group">
                <label for="Body">Body</label>
                <div>
                    <textarea class="form-control" name="q[body]" id="Body" rows="10" required="true" minlength="15" placeholder="Provide details of your question"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="Course">Course</label>
                <div>
                    <input class="form-control" type="text" name="q[course]" id="Course" required="true" placeholder="Include what class your question is about">
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-md" type="submit" value="Post Question">
            </div>
        </form>
    </div>
    <div>
        <a href="/questions">View Questions</a>
    </div>
<%-include("partials/footer")%>
