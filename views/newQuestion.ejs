<%-include("partials/header")%>
<div class="indexContainer">
    <h1>Ask a Question</h1>
    <div class="questionBox">
        <form action="/questions" method="POST">
            <div class="form-group">
                <label for="Title">Title</label>
                <div>
                    <input class="form-control" type="text" name="q[title]" id="Title">
                </div>
            </div>
            <div class="form-group">
                <label for="Body">Body</label>
                <div>
                    <textarea class="form-control" name="q[body]" id="Body" cols="30" rows="10"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="Course">Course</label>
                <div>
                    <input class="form-control" type="text" name="q[course]" id="Course">
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-md" type="submit" value="Post Question">
            </div>
        </form>
    </div>
    <div>
        <a href="/questions">View Questions</a>
    </div>
</div>
<%-include("partials/footer")%>
