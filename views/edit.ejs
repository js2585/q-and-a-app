<%-include("partials/header")%>
<div class="container">
    <h1>Edit Question</h1>
    <div class="questionBox">
        <form action="/questions/<%=question._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="Title">Title</label>
                <div>
                    <input class="form-control" type="text" name="q[title]" id="Title" value="<%=question.title%>">
                </div>
            </div>
            <div class="form-group">
                <label for="Body">Body</label>
                <div>
                    <textarea class="form-control" name="q[body]" id="Body" value="<%=question.body%>"><%=question.body%></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="Course">Course</label>
                <div>
                    <input class="form-control" type="text" name="q[course]" id="Course" value="<%=question.course%>">
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-md" type="submit" value="Update Question">
            </div>
        </form>
    </div>
    <div>
        <a href="/questions">View Questions</a>
    </div>
</div>
<%-include("partials/footer")%>
